{
  "name": "beauty-shop",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "secrets:check": "bash -lc 'if git ls-files | grep -E \"^\\.env(\\..*)?$\"; then echo \"Error: .env files must not be committed\" >&2; exit 1; fi'",
    "env:setup": "node scripts/setup-env.js",
    "env:validate": "node scripts/validate-env.js",
    "env:health": "node scripts/health-check.js",
    "env:check": "npm run env:validate && npm run env:health",
    "backup:create": "mkdir -p .backup/pre-monorepo && cp -r apps/medusa package.json package-lock.json .backup/pre-monorepo/ 2>/dev/null || true",
    "backup:restore": "cp -r .backup/pre-monorepo/* . && echo 'Backup restored. Run npm install to restore dependencies.'",
    "security:audit": "node scripts/security-audit.js",
    "repo:health": "node scripts/repo-health-check.js",
    "repo:check": "npm run repo:health && npm run check",
    "check": "turbo run check",
    "pre-pr": "npm run check && npm run build",
    "ci": "npm ci --prefer-offline && npm run check",
    "analyze": "turbo run build && node scripts/analyze-bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eskoubar95/beauty-shop.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eskoubar95/beauty-shop/issues"
  },
  "homepage": "https://github.com/eskoubar95/beauty-shop#readme",
  "description": "",
  "devDependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "supabase": "^2.53.6",
    "turbo": "^1.13.4"
  }
}
