{
  "kind": "collectionType",
  "collectionName": "bundle_pages",
  "info": {
    "singularName": "bundle-page",
    "pluralName": "bundle-pages",
    "displayName": "Bundle Page",
    "description": "Rich bundle/product pages with Medusa integration"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "required": true,
      "unique": true
    },
    "medusaProductId": {
      "type": "string",
      "required": false
    },
    "medusaProductHandle": {
      "type": "string",
      "required": false
    },
    "heroTitle": {
      "type": "string",
      "required": false,
      "maxLength": 255
    },
    "heroSubtitle": {
      "type": "text",
      "required": false
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "sections": {
      "type": "json",
      "required": false
    },
    "faqItems": {
      "type": "component",
      "repeatable": true,
      "component": "default.faq-item"
    },
    "socialProof": {
      "type": "json",
      "required": false
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}

